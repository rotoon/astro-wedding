<!-- Couple Bio -->
<section class='bio-section'>
  <div class='section-decorative-line'></div>
  <div class='content-wrapper'>
    <div class='bio-heading'>
      <h2 class='section-title reveal-title'>About Us</h2>
      <div class='decorative-flourish'>
        <svg
          viewBox='0 0 100 20'
          preserveAspectRatio='none'
        >
          <path
            d='M0,10 C30,20 70,0 100,10'
            vector-effect='non-scaling-stroke'
          ></path>
        </svg>
      </div>
    </div>
    <div class='bio-content'>
      <div class='bio-cards'>
        <div
          class='bio-card groom-card reveal-item'
          data-delay='0'
        >
          <div
            class='bio-photo'
            style="
                background-image: url('/img/groom.webp');
                background-size: cover;
                background-position: center;
              "
          >
          </div>
          <div class='bio-info'>
            <h3>Nuttapon</h3>
            <p class='bio-birthday'>September 8, 1989</p>
            <p class='bio-detail'>Developer, passionate about travel</p>
          </div>
        </div>
        <div class='bio-separator reveal-item'>
          <div class='bio-heart'>‚ù§</div>
        </div>
        <div
          class='bio-card bride-card reveal-item'
          data-delay='150'
        >
          <div
            class='bio-photo'
            style="
                background-image: url('/img/bride.webp');
                background-size: cover;
                background-position: top;
              "
          >
          </div>
          <div class='bio-info'>
            <h3>Suchanya</h3>
            <p class='bio-birthday'>September 27, 1990</p>
            <p class='bio-detail'>
              Food and Beverage, loves photography and coffee
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='accent-shape shape-1'></div>
  <div class='accent-shape shape-2'></div>
</section>

<style>
  .bio-card {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: opacity, transform;
  }

  .bio-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .bio-photo {
    transform: scale(0.9);
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform;
  }

  .bio-card:hover .bio-photo {
    transform: scale(1);
  }

  .bio-info {
    opacity: 0;
    transform: translateY(10px);
    transition:
      opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    transition-delay: 0.2s;
    will-change: opacity, transform;
  }

  .bio-card.visible .bio-info {
    opacity: 1;
    transform: translateY(0);
  }

  .bio-heart {
    opacity: 0;
    transform: scale(0.5);
    transition:
      opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: opacity, transform;
  }

  .bio-card.visible ~ .bio-separator .bio-heart {
    opacity: 1;
    transform: scale(1);
  }
</style>

<script>
  // Enhanced animation setup for bio cards
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.2,
      rootMargin: '0px 0px -50px 0px',
    }

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) return

        const element = entry.target as HTMLElement
        const delay = parseInt(element.dataset.delay || '0', 10)

        // Use requestAnimationFrame for smoother animations
        requestAnimationFrame(() => {
          setTimeout(() => {
            element.classList.add('visible')
          }, delay)
        })

        observer.unobserve(element)
      })
    }, observerOptions)

    // Observe bio cards
    document.querySelectorAll('.bio-card').forEach((card) => {
      observer.observe(card)
    })
  })
</script>
