<div class='loading-screen'>
  <div class='loading-container'>
    <div class='loading-logo'>SOM & TOON</div>
    <div class='loading-bar-container'>
      <div class='loading-bar'></div>
    </div>
    <div class='loading-text'>LOADING YOUR INVITATION</div>
    <div
      class='loading-progress'
      id='loading-progress'
    >
      <span
        class='loading-percent'
        id='loading-percent'
        >0%</span
      >
    </div>
  </div>
</div>

<style>
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--light-color);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    transition:
      opacity 0.8s cubic-bezier(0.65, 0, 0.35, 1),
      visibility 0.8s cubic-bezier(0.65, 0, 0.35, 1);
    will-change: opacity, visibility;
  }

  .loading-screen.hidden {
    opacity: 0;
    visibility: hidden;
  }

  .loading-progress {
    margin-top: 0.5rem;
    font-family: var(--body-font);
    font-size: 0.7rem;
    color: var(--text-muted);
    letter-spacing: 0.1em;
    display: block;
  }

  /* Prevent scroll during loading */
  :global(body.loading) {
    overflow: hidden;
    height: 100vh;
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    const percentElement = document.getElementById('loading-percent')
    const loadingScreen = document.querySelector('.loading-screen')
    const mainContainer = document.querySelector('.main-container')

    // Prevent scrolling during loading
    document.body.classList.add('loading')

    // Force scroll to top
    window.scrollTo({
      top: 0,
      left: 0,
      behavior: 'instant',
    })

    // Configuration for 1.5 second loading
    const TOTAL_LOADING_TIME = 1500 // 1.5 seconds in milliseconds
    const PROGRESS_INTERVAL = 30 // Update every 30ms for smooth animation
    const TOTAL_STEPS = TOTAL_LOADING_TIME / PROGRESS_INTERVAL
    const PROGRESS_INCREMENT = 100 / TOTAL_STEPS

    let progress = 0
    let progressComplete = false

    function updateProgress() {
      if (progressComplete) return

      if (progress < 100) {
        progress += PROGRESS_INCREMENT
        progress = Math.min(progress, 100)

        if (percentElement) {
          percentElement.textContent = Math.round(progress) + '%'
        }

        // Continue updates for smooth animation
        if (progress < 100) {
          setTimeout(updateProgress, PROGRESS_INTERVAL)
        }
      }
    }

    // Start progress animation
    updateProgress()

    function hideLoadingScreen() {
      progressComplete = true

      if (percentElement) {
        percentElement.textContent = '100%'
      }

      if (loadingScreen && !loadingScreen.classList.contains('hidden')) {
        loadingScreen.classList.add('hidden')
      }

      // Show main content with a slight delay for smooth transition
      setTimeout(function () {
        if (mainContainer && !mainContainer.classList.contains('visible')) {
          mainContainer.classList.add('visible')
          document.body.classList.remove('loading')
          window.scrollTo({
            top: 0,
            left: 0,
            behavior: 'instant',
          })
        }
      }, 300) // Short delay for smooth transition
    }

    // Hide loading screen after exactly 1.5 seconds
    setTimeout(hideLoadingScreen, TOTAL_LOADING_TIME)

    // Failsafe: Force hide after 2 seconds if something goes wrong
    setTimeout(function () {
      if (loadingScreen && !loadingScreen.classList.contains('hidden')) {
        document.body.classList.remove('loading')
        document.body.classList.add('loaded')
        loadingScreen.classList.add('hidden')
        mainContainer.classList.add('visible')
        window.scrollTo({
          top: 0,
          left: 0,
          behavior: 'instant',
        })
      }
    }, 2000)
  })
</script>
